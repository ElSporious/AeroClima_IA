<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_peekHeight="160dp">

    <TextView
        android:id="@+id/bs_icao_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="SCEL" />

    <TextView
        android:id="@+id/bs_station_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        tools:text="Arturo Merino Benitez" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <TextView
        android:id="@+id/bs_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Viento: 5 nudos" />

    <TextView
        android:id="@+id/bs_visibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Visibilidad: 10000 m" />

    <TextView
        android:id="@+id/bs_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Temperatura: 15°C" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="METAR (Raw):"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bs_raw_metar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        tools:text="SCEL 101500Z 05005KT 9999 FEW030 15/07 Q1018" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAF (Raw):"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bs_raw_taf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        tools:text="TAF SCEL 101100Z 1012/1112 05005KT 9999 FEW030 TX17/1018Z TN08/1110Z..." />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <Button
        android:id="@+id/btn_traducir_taf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Traducir TAF con IA"
        android:visibility="gone"
        tools:visibility="visible" />

    <ProgressBar
        android:id="@+id/taf_loading_spinner"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

    <TextView
        android:id="@+id/bs_traduccion_ia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:visibility="gone"
        tools:text="La IA dice: El viento estará calmado..."
        tools:visibility="visible" />

</LinearLayout>