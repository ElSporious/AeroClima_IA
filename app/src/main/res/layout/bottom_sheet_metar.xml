<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="16dp"
    app:behavior_peekHeight="160dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/bs_icao_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SCEL"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_favorite"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Favorito"
            android:src="@android:drawable/btn_star_big_off" />
    </LinearLayout>

    <TextView
        android:id="@+id/bs_station_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Aeropuerto"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/bs_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Viento: -"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/bs_visibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visibilidad: -"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/bs_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatura: -"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/bs_raw_metar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#f0f0f0"
        android:padding="8dp"
        android:text="..."
        android:fontFamily="monospace"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Pronóstico (TAF):"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bs_raw_taf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#f0f0f0"
        android:padding="8dp"
        android:text="Cargando..."
        android:fontFamily="monospace"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_traducir_taf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Traducir TAF con IA ✨" />

    <ProgressBar
        android:id="@+id/taf_loading_spinner"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/bs_traduccion_ia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#F3E5F5"
        android:padding="12dp"
        android:text="..."
        android:textSize="14sp"
        android:visibility="gone" />

</LinearLayout>