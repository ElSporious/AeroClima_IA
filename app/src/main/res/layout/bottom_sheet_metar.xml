<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_peekHeight="160dp">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/bs_icao_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCEL"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bs_station_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Arturo Merino Benitez"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/bs_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Viento: 10 nudos"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/bs_visibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visibilidad: 9999 m"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/bs_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatura: 15°C"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/bs_raw_metar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#f0f0f0"
        android:padding="8dp"
        android:text="METAR SCEL 170400Z..."
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Pronóstico (TAF):"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bs_raw_taf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#f0f0f0"
        android:padding="8dp"
        android:text="Cargando TAF..."
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_traducir_taf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Traducir TAF con IA" />

    <ProgressBar
        android:id="@+id/taf_loading_spinner"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/bs_traduccion_ia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#f0f0f0"
        android:padding="8dp"
        android:text="Traducción aparecerá aquí..."
        android:textSize="14sp"
        android:visibility="gone" />

</LinearLayout>